<div class="page-header">
  <%= link_to doers_path, :class => 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_doer_path(@doer), :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show doer</h1>
</div>

<dl class="dl-horizontal">
  <dt>Name:</dt>
  <dd><%= @doer.name %></dd>

  <dt>Email:</dt>
  <dd><%= @doer.email %></dd>

  <dt>Password digest:</dt>
  <dd><%= @doer.password_digest %></dd>

</dl>
