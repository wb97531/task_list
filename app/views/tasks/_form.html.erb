<%= form_for(@task, :html => { :class => "form-horizontal", :role => "form" }) do |f| %>
  <% if @task.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h4>

      <ul>
      <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :title, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :description, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :notes, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :notes, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :deadline, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.datetime_select :deadline, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :category, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :category, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :completed, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.check_box :completed, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :date_completed, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.datetime_select :date_completed, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :priority, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :priority, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :doer_id, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :doer_id, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
