<div class="page-header">
  <%= link_to tasks_path, :class => 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_task_path(@task), :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show task</h1>
</div>

<dl class="dl-horizontal">
  <dt>Title:</dt>
  <dd><%= @task.title %></dd>

  <dt>Description:</dt>
  <dd><%= @task.description %></dd>

  <dt>Notes:</dt>
  <dd><%= @task.notes %></dd>

  <dt>Deadline:</dt>
  <dd><%= @task.deadline %></dd>

  <dt>Category:</dt>
  <dd><%= @task.category %></dd>

  <dt>Completed:</dt>
  <dd><%= @task.completed %></dd>

  <dt>Date completed:</dt>
  <dd><%= @task.date_completed %></dd>

  <dt>Priority:</dt>
  <dd><%= @task.priority %></dd>

  <dt>Doer:</dt>
  <dd><%= @task.doer_id %></dd>

</dl>
